	},
	"pulseaudio": {
        //"scroll-step": 1,
        	"format": "{icon} {volume}%",
        	"format-muted": "ÔÄ¶",
        	"format-icons": {
            		"headphones": "ÔÄ•",
            		"handsfree": "Ôñê",
            		"headset": "Ôñê",
            		"phone": "ÔÇï",
            		"portable": "ÔÇï",
            		"car": "ÔÜπ",
            		"default": ["ÔÄß", "ÔÄ®"]
        	},
        	"on-click": "pavucontrol"
    	},
	"memory": {
		"interval": 5,
		"format": "Mem {}%",
