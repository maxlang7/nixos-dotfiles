	"hyprland/workspaces": {
		"disable-scroll": true,
		"format": "{name}"
	},
	"custom/resolution": {
	  "format": "{}",
	  "exec": "/usr/bin/env bash /home/maxlang/.config/waybar/get_monitor_resolution_icon.sh",
		"on-click": "bash /etc/nixos/artifacts/scripts/rofi-resolution-switcher.sh",	
    "interval": 30
	},
	"mpris": {
		"format": "{player_icon} <i>{title}</i>",
		"format-paused": "{status_icon} <i>{title}</i>",
		"player-icons": {
			"default": "‚ñ∂",
			"mpv": "üéµ"
		},
		"status-icons": {
			"paused": "‚è∏"
		},
	},
	"clock#1": {
		"format": "{:%a}",
		"tooltip": false
	},
	"clock#2": {
		"format": "{:%r}",
		"tooltip": false,
		"interval": 1
	},
	"clock#3": {
		"format": "{:%m/%d}",
		"tooltip": false
	},	
	"network": {
        	// "interface": "wlp2s0", // (Optional) To force the use of this interface
        	"format-wifi": "Ôá´ {essid} ({signalStrength}%)",
